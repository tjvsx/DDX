{
    "artifactsDir": "../contract-artifacts/contracts",
    "contractsDir": "./contracts",
    "useDockerisedSolc": false,
    "isOfflineMode": false,
    "compilerSettings": {
        "evmVersion": "istanbul",
        "optimizer": {
            "enabled": true,
            "runs": 50000,
            "details": { "yul": false, "deduplicate": true, "cse": true, "constantOptimizer": true }
        },
        "outputSelection": {
            "*": {
                "*": [
                    "abi",
                    "devdoc",
                    "evm.bytecode.linkReferences",
                    "evm.bytecode.object",
                    "evm.bytecode.sourceMap",
                    "evm.deployedBytecode.object",
                    "evm.deployedBytecode.sourceMap",
                    "evm.gasEstimates"
                ]
            }
        }
    },
    "shouldSaveStandardInput": true
}
